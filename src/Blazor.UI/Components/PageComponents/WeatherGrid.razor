@using Blazor.Core.Models.Entities
@using Blazor.Core.Models.Settings

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Temp. (C)</th>
            <th>Temp. (F)</th>
            <th>Summary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var forecast in DataSource)
        {
            <tr>
                <td>@forecast.DateDisplay</td>
                <td>@forecast.TemperatureC</td>
                <td>@forecast.TemperatureF</td>
                <td>@((MarkupString) forecast.GetSummaryTableDisplay() )</td>
            </tr>
        }
    </tbody>
</table>


@code {
    [Parameter] public List<WeatherForecast> DataSource { get; set; } = default!;

}